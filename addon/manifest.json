{
  "manifest_version": 2,
  "name": "eChess",
  "version": "0.1",

  "description": "Free cloud analysis for Chess.com games",
  "homepage_url": "https://chess.emlyn.xyz",
  "icons": {
    "48": "icons/echess48.png",
    "96": "icons/echess96.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/echess32.png",
    "default_title": "eChess",
    "default_popup": "popup/analyse.html"
  }
}
